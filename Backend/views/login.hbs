<div class=" container mt-4 mb-4 w-50">
  {{#if message }}
  <h4 class="alert alert-danger mt-4"> {{ message }}</h4>
  {{/if}}
</div>

<div class="container mt-4 jumbotron w-auto custom-register-form">
  <div class="card">
    <div class="card-header">
      Login Form
    </div>
    <div class="card-body">

      <form action="/auth/login" method="POST">

        <div class="form-group mt-3">

          <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
        </div>

        <div class="form-group mt-3">

          <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password"
            required>
        </div>

        <button type="submit" class="btn btn-warning mt-3">Login</button>

      </form>
      <a href="/register" class="btn btn-warning mt-3">Create new account</a>
    </div>
  </div>
</div>